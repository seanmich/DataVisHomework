{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Highest Percent of Government Spending Spent on Education from 2016-2019",
  "width": 1500,
  "height": 600,
  "projection": {"type": "equalEarth"},
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/seanmich/seanmich.github.io/main/data/ne_110m_admin_0_countries.topojson.txt",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.ISO_A3_EH",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/seanmich/seanmich.github.io/main/data/data.csv"
            },
            "key": "Country_Code",
            "fields": ["Percent"]
          }
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Percent",
          "type": "quantitative"
        },
        "tooltip": [
          {"field": "properties.NAME_LONG", "type": "nominal", "title": "Country"},
          {"field": "Percent", "type": "quantitative"}
        ]
      }
    },
    {
      "mark":"text",
      "encoding": {
        "text":{
          "field":"Percent", "type": "nominal"
        },
        "color":{"value":"black"}
      }
    }
  ]
  
}