{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "projection": {"type": "equalEarth"},
    "title": "Labor force by country",
    "data": {
      "url": "https://raw.githubusercontent.com/seanmich/seanmich.github.io/main/data/ne_110m_admin_0_countries.topojson.txt",
      "format": {"type": "topojson", 
      "feature": "ne_110m_admin_0_countries"}
    },
    "params": [
      {"name": "selected_year",
      "value":1990,
      "bind":{
        "input": "range",
        "min": 1990,
        "max": 2021,
        "step": 1,
        "name": "Year"
      }
      }
    ],
    "transform": [
      {"lookup": "properties.ISO_A3_EH",
      "from":{
        "data":{
          "url": "https://raw.githubusercontent.com/seanmich/seanmich.github.io/main/data/melted_labor_data.csv"
          },
          "key": "Country Code",
          "fields": ["Year","LaborForce"]
          }
      },
      {"filter":"datum.Year == selected_year"}
    ],
    "mark":"geoshape",
    "encoding": {
      "color":{
        "field": "LaborForce",
        "type": "quantitative"
      }
    }
    
  }